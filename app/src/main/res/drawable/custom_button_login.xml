<?xml version="1.0" encoding="utf-8"?>
<selector
    xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true" >
        <shape>
            <gradient
                android:startColor="@color/prt_color"
                android:endColor="@color/prt_color"
                android:angle="270"  />
             <stroke
                android:width="1dp"
                android:color="@color/prt_color_border"   /> 
            <corners
                android:radius="1dp" />

           
        </shape>
    </item>

    <item android:state_focused="true" >
        <shape>
            <gradient
                android:endColor="#3AA7F1"
                android:startColor="#3AA7F1"
                android:angle="270" />
             <stroke
                android:width="1dp"
                android:color="#3AA7F1" /> 
            <corners
                android:radius="1dp" />

        </shape>
    </item>

     <item>        
        <shape>
            <gradient
                android:endColor="#E9021E"
                android:startColor="#E63247"
                android:angle="270" />
             <corners android:radius="5dp"/>
    <stroke
        android:width="0.5dp"
        android:color="#1a2379"/>

        </shape>
    </item> 
</selector>