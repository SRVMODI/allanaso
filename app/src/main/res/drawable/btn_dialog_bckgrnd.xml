<?xml version="1.0" encoding="utf-8"?>
<selector
    xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true" >
        <shape>
            <gradient
                android:startColor="#74C543"
                android:endColor="#74C543"
                android:angle="270" 
                
                />
             <stroke
                android:width="1dp"
                android:color="#68B638" 
                /> 
            <corners
                android:radius="1dp" />
           <padding
                android:left="10dp"
                android:top="8dp"
                android:right="10dp"
                android:bottom="8dp" />
           
        </shape>
    </item>

    <item android:state_focused="true" >
        <shape>
            <gradient
                android:endColor="#3AA7F1"
                android:startColor="#3AA7F1"
                android:angle="270" />
             <stroke
                android:width="1dp"
                android:color="#3AA7F1" /> 
            <corners
                android:radius="1dp" />
            <padding
                android:left="10dp"
                android:top="8dp"
                android:right="10dp"
                android:bottom="8dp" />
        </shape>
    </item>

     <item>        
        <shape>
            <gradient
                android:startColor="#FF9800"
                android:centerColor="#FF9800" 
                android:endColor="#FF9800"
                android:angle="270" />
             <stroke
                android:width="1dp"
                android:color="#D98200" /> 
            <corners
                android:radius="3dp" />
           <padding
                android:left="10dp"
                android:top="8dp"
                android:right="10dp"
                android:bottom="8dp" />
        </shape>
    </item> 
</selector>