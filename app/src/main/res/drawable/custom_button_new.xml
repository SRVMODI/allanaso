<?xml version="1.0" encoding="utf-8"?>
<selector
    xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true" >
        <shape>
            <gradient
                android:startColor="@color/prt_color"
                android:endColor="@color/prt_color"
                android:angle="270" 
                
                />
             <stroke
                android:width="1dp"
                android:color="@color/prt_color_border" 
                /> 
            <corners
                android:radius="1dp" />
           <padding
                android:left="5dp"
                android:top="4dp"
                android:right="5dp"
                android:bottom="4dp" />
           
        </shape>
    </item>

    <item android:state_focused="true" >
        <shape>
            <gradient
                android:endColor="#ED7D31"
                android:startColor="#ED7D31"
                android:angle="270" />
             <stroke
                android:width="1dp"
                android:color="#3AA7F1" /> 
            <corners
                android:radius="1dp" />
            <padding
                android:left="5dp"
                android:top="4dp"
                android:right="5dp"
                android:bottom="4dp" />
        </shape>
    </item>

     <item>        
        <shape>
            <gradient
                android:endColor="#ED7D31"
                android:startColor="#ED7D31"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="#AF0004" /> 
            <corners
                android:radius="1dp" />
           <padding
                android:left="5dp"
                android:top="4dp"
                android:right="5dp"
                android:bottom="4dp" />
        </shape>
    </item> 
</selector>