<?xml version="1.0" encoding="utf-8"?>
<selector
    xmlns:android="http://schemas.android.com/apk/res/android">

   
     <item   android:state_pressed="true">        
        <shape >
            <gradient
                android:endColor="#FFFFC4"
                android:centerColor="#FFFFC4"
                android:startColor="#FFFFC4"
                 android:angle="270"
                 />
             
    <stroke
        android:width="1dp"
        android:color="#15305B"/>
          
        </shape>
    </item> 
    
      <item android:state_focused="true">        
        <shape >
            <gradient
                android:endColor="#FFFFC4"
                android:centerColor="#FFFFC4"
                android:startColor="#FFFFC4"
                 android:angle="270"
                 />
             
    <stroke
        android:width="1dp"
        android:color="#15305B"/>
          
        </shape>
    </item> 
    
       <item>        
        <shape >
            <gradient
                android:endColor="#fff"
                android:centerColor="#fff"
                android:startColor="#fff"
                 android:angle="270"
                 />
             
    <stroke
        android:width="1dp"
        android:color="#15305B"/>
          
        </shape>
    </item> 
   
</selector>