<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="200dp"
    android:layout_height="wrap_content"
    android:background="@drawable/shadow_with_5dp"
    android:orientation="vertical" >
     
     <TextView
        android:id="@+id/textView1"
        android:layout_width="match_parent"
        android:textColor="#FFF"
        android:textStyle="bold"
        android:textSize="16sp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
       android:paddingLeft="10dp"
       android:paddingRight="10dp"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
       android:layout_alignParentRight="true"
       android:visibility="visible"
       android:background="#FF9800"
       android:layout_marginBottom="2dp"
        android:text="" />

     <TextView
         android:layout_width="match_parent"
         android:layout_height="20dp" />
     
     <LinearLayout 
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:orientation="horizontal">
     <TextView 
        android:layout_width="0dp"
        android:layout_weight="1"
        android:paddingTop="3dp"
        android:paddingBottom="3dp"
        android:background="#FF9800"
        android:textSize="12sp"
        android:textColor="#000"
        android:gravity="center"
        android:layout_marginRight="1dp"
        android:id="@+id/txtView_dialog_mnthName"
        android:layout_height="match_parent"
        android:text="@string/PKDMonth"/>
    
   	 <TextView 
        android:layout_width="0dp"
        android:layout_weight="0.60"
        android:textColor="#000"
        android:paddingTop="3dp"
        android:paddingBottom="3dp"
        android:gravity="center"
        android:background="#FF9800"
        android:textSize="12sp"
        android:layout_height="match_parent"
        android:text="@string/StockValue"/>
    </LinearLayout>
     
     <ScrollView 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="2dp">
     <LinearLayout android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:orientation="vertical"
         android:id="@+id/llayout_dialog_row"
         >
         
     </LinearLayout>
		 </ScrollView>
		 <TextView
         android:layout_width="match_parent"
         android:layout_height="20dp" />
     
     
     <LinearLayout
         
       
         android:layout_width="match_parent"
         android:layout_height="30dp"
         android:layout_marginTop="4dp"
       >
        
        
     <Button
         android:id="@+id/button1"
         android:layout_width="0dp"
         android:padding="5dp"
         android:textSize="15sp"
         android:layout_weight="1"
         android:background="@drawable/btn_dialog_bckgrnd"
         android:layout_height="wrap_content"
         android:layout_alignParentBottom="true"
         android:layout_alignParentLeft="true"
         android:textColor="#FFFFFF"
         android:text="@string/AlertDialogOkButton" />
     

     <Button
         android:id="@+id/btncncle"
         android:padding="5dp"
         android:textSize="15sp"
         android:layout_weight="1"
         android:background="@drawable/btn_dialog_bckgrnd"
         android:layout_width="0dp"
         android:layout_height="wrap_content"
        android:textColor="#FFFFFF"
         android:layout_alignParentRight="true"
       android:layout_marginLeft="2dp"
         android:text="@string/AlertDialogCancelButton" />
     </LinearLayout>
    

</LinearLayout>