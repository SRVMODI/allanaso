<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="6dp"
    android:paddingRight="6dp"
    android:paddingTop="3dp"
    android:paddingBottom="3dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/llayout_for_header">

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1.80"
            android:layout_height="match_parent"
            android:paddingLeft="6dp"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
            android:textSize="12sp"
            android:textColor="#000"
            android:id="@+id/textView_Child"
            android:gravity="left|center"/>

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1.20"
            android:layout_height="match_parent"
            android:paddingLeft="16dp"
            android:paddingRight="6dp"
            android:textColor="#000"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
            android:textSize="12sp"
            android:id="@+id/textView_TotalStore"
            android:gravity="center"/>

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1.40"
            android:layout_height="match_parent"
            android:paddingLeft="16dp"
            android:paddingRight="6dp"
            android:paddingTop="4dp"
            android:textColor="#000"
            android:paddingBottom="4dp"
            android:textSize="12sp"
            android:id="@+id/textView_Validated"
            android:gravity="center"/>

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1.20"
            android:layout_height="match_parent"
            android:paddingLeft="16dp"
            android:paddingRight="6dp"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
            android:textSize="12sp"
            android:textColor="#000"
            android:id="@+id/textView_Pending"
            android:gravity="center"/>
       <!-- <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="2dp"
            android:layout_marginLeft="3dp"
            android:layout_gravity="center"
            android:id="@+id/img_expand"
            android:background="@drawable/expand_arrow"/>-->

    </LinearLayout>

    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone"
        android:id="@+id/llayout_for_row">

    </LinearLayout>
    
	</LinearLayout>