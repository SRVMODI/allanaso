<?xml version="1.0" encoding="utf-8"?>
 <LinearLayout 
	    xmlns:android="http://schemas.android.com/apk/res/android"
	    android:orientation="vertical"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		
		 >
		 
     
     
		 
     
       <LinearLayout 
	      android:id="@+id/ll_sample"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:orientation="horizontal"
	    android:layout_marginTop="1dp"
	    android:layout_marginBottom="1dp"
	   
	   android:weightSum="7">
		
	<TextView
			android:id="@+id/tvProdctName"
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:text="Product Name"
			android:layout_marginTop="0dp"
			android:textColor="#000000"
			android:textSize="12sp"
			android:padding="3dp"
			
			android:layout_weight="2.6"/>
		
	 <LinearLayout 
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.55"
           
            android:orientation="vertical">
	

		  <EditText  
  	       android:id="@+id/et_ExistingStock"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	      android:singleLine="true"
	      android:gravity="center"
	      android:layout_marginLeft="0dp"
	      android:enabled="true"
	       android:padding="1dp"
	      android:textSize="12sp"
	      android:layout_marginTop="1.5dp"
	     android:inputType="number"
	      android:hint="       0       "
	      android:textColor="#000000"
	      android:maxLength="7"
	      android:background="@drawable/edit_text_bg"
	        />
		  
		   <EditText  
  	        android:id="@+id/et_FreshOrder"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	      android:singleLine="true"
	      android:gravity="center"
	      android:layout_marginLeft="0dp"
	      android:enabled="true"
	       android:padding="1dp"
	      android:textSize="12sp"
	      android:layout_marginTop="0dp"
	     android:inputType="number"
	      android:hint="      0      "
	       android:maxLength="7"
	      android:textColor="#D42625"
	      android:background="@drawable/edit_text_bg"
	        android:layout_marginBottom="1.5dp"
	        />
		   
		   </LinearLayout>
		   
	  <LinearLayout 
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.55"
            android:weightSum="2"
            android:layout_marginLeft="7dp"
            android:orientation="vertical">
	
		   <EditText 
	           android:id="@+id/et_ReturntoDistributor"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	         android:singleLine="true"
	         android:gravity="center"
	         android:enabled="true"
	          android:layout_marginTop="1.5dp"
	         android:inputType="number"
	         android:hint="    0    "
	          android:padding="1dp"
	         android:textSize="12sp"
	          android:textColor="#000000"
	         android:maxLength="7"
	           android:layout_marginLeft="2dp"
	            android:background="@drawable/edit_text_bg"
	        />
		   
		     <EditText 
	         android:id="@+id/et_DiscardDamage" 
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	         android:singleLine="true"
	         android:gravity="center"
	         android:enabled="true"
	          android:layout_marginTop="0dp"
	         android:maxLength="7"
	         android:hint="    0    "
	          android:padding="1dp"
	         android:textSize="12sp"
	          android:textColor="#D42625"
	        android:inputType="number"
	           android:layout_marginLeft="2dp"
	           android:background="@drawable/edit_text_bg"
	             android:layout_marginBottom="1.5dp"
	        />
		   
		    </LinearLayout>
		 
		    <ImageView  
	            android:id="@+id/imgVw_Photo"
	        android:layout_width="0dp"
	        android:layout_height="20dp"
	          android:layout_marginLeft="6dp"
	          
	       android:src="@drawable/camera_clkd"
	       
	        android:layout_weight="1.1"/>
		   
		   
		   	 </LinearLayout>
		   
		 

	</LinearLayout>
