<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true"
    android:padding="@dimen/dimen_10dp"
    tools:context=".reports.YesterdayReportFragment">

    <!-- TODO: Update blank fragment layout -->

    <RelativeLayout
        android:id="@+id/rlGreeting"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/llGreeting"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvGreeting"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@color/darkgrey"
                android:textSize="@dimen/LauncherClassHeadingTextSize"
                android:textStyle="italic" />

            <TextView
                android:id="@+id/tvPersonName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/tvGreeting"
                android:textColor="@color/darkgrey"
                android:textSize="@dimen/LauncherClassHeadingTextSize"
                android:textStyle="bold" />
        </LinearLayout>

        <TextView
            android:id="@+id/tvDescr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/llGreeting"
            android:layout_marginTop="@dimen/dimen_10dp"
            android:text=""
            android:visibility="gone"
            android:textColor="@color/darkgrey"
            android:textSize="@dimen/LauncherClassHeadingTextSize"
            android:textStyle="normal" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_1dp"
            android:layout_below="@+id/tvDescr"
            android:layout_marginTop="@dimen/dimen_10dp"
            android:background="@color/darkgrey" />

    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/bt_Next"
        android:layout_below="@+id/rlGreeting"
        android:layout_marginTop="@dimen/dimen_2dp"
        android:layout_marginBottom="10dp">

        <LinearLayout
            android:id="@+id/ll_Parent"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

        </LinearLayout>

    </ScrollView>

    <Button
        android:id="@+id/bt_Next"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="3dp"
        android:layout_weight="1"
        android:background="@drawable/custom_button"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:text="@string/Next"
        android:textColor="#ffffff"
        android:textSize="12sp" />

</RelativeLayout>