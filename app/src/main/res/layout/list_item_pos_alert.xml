<?xml version="1.0" encoding="utf-8"?>
 <LinearLayout 
	    xmlns:android="http://schemas.android.com/apk/res/android"
	    android:orientation="vertical"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		 android:id="@+id/ll_sample"
		 >
		 
     
     
		 
     
       <LinearLayout 
	   
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:orientation="horizontal"
	    android:layout_marginTop="1dp"
	    android:layout_marginBottom="1dp"
	   android:weightSum="10">
		
	<TextView
			android:id="@+id/tvProdctName"
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:text="Product Name"
			android:layout_marginTop="0dp"
			android:textColor="#000000"
			android:textSize="12sp"
			android:layout_weight="4"/>
		
	

		
	
		   <EditText 
	           android:id="@+id/et_ReturntoDistributor"
	        android:layout_width="0dp"
	        android:layout_height="wrap_content"
	         android:singleLine="true"
	         android:enabled="false"
	          android:layout_marginTop="1dp"
	         android:inputType="number"
	         android:hint="    0    "
	          android:padding="1dp"
	         android:textSize="12sp"
	         android:gravity="center"
	          android:textColor="#000000"
	         android:maxLength="7"
	           android:layout_marginLeft="5dp"
	          
	      android:background="@drawable/edit_text_diable_bg_transprent"
	       android:layout_marginBottom="1dp"
	        android:layout_weight="2"/>
		   
		    <EditText  
  	        android:id="@+id/et_FreshOrder"
	        android:layout_width="0dp"
	        android:layout_height="wrap_content"
	      android:singleLine="true"
	      android:gravity="center"
	      android:layout_marginLeft="1dp"
	      android:enabled="false"
	       android:padding="1dp"
	      android:textSize="12sp"
	      android:layout_marginTop="1dp"
	     android:inputType="number"
	      android:hint="      0      "
	       android:maxLength="7"
	      android:textColor="#D42625"
	      android:background="@drawable/edit_text_diable_bg_transprent"
	      android:layout_marginBottom="1dp"
	        android:layout_weight="2"/>
	
		   <EditText 
	         android:id="@+id/et_DiscardDamage" 
	        android:layout_width="0dp"
	        android:layout_height="wrap_content"
	         android:singleLine="true"
	         android:gravity="center"
	         android:enabled="false"
	          android:layout_marginTop="1dp"
	         android:maxLength="7"
	         android:hint="    0    "
	          android:padding="1dp"
	         android:textSize="12sp"
	          android:textColor="#D42625"
	        android:inputType="number"
	           android:layout_marginLeft="2dp"
	            android:background="@drawable/edit_text_diable_bg_transprent"
	      android:layout_marginBottom="1dp"
	        android:layout_weight="2"/>
		   
		 
		   
		   	 </LinearLayout>
		   
		 
	</LinearLayout>
	
 
