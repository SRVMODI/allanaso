<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >
    
<TableRow 
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="1dp"
                    android:layout_marginRight="1dp"
                    
                    android:background="@drawable/border_to_inflate_row">
                    
                    <TextView 
                        android:layout_width="90dp"
                        android:layout_height="match_parent"
                       android:paddingLeft="6dp"
                android:paddingRight="6dp"
                android:paddingTop="2dp"
                android:paddingBottom="2dp"
                        android:text="CH"
                        android:textSize="10sp"
                        android:id="@+id/textView_Shortname"
                        android:background="@drawable/border_left_right_bottom"
                        android:gravity="center"/>
                    
                    <LinearLayout 
                        android:layout_width="0dp"
                        android:layout_weight="2.70"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">
                        
                    
                    <EditText 
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                       android:inputType="number"
                       android:padding="4dp"
                       android:textSize="10sp"
                       android:maxLength="4"
                       android:id="@+id/edittxt_mnth1"
                       android:gravity="center"
                        android:background="@android:drawable/editbox_background_normal"
                        android:layout_weight="0.8"
                        />
                    
                    
                    <EditText 
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                       android:inputType="number"
                       android:padding="4dp"
                       android:textSize="10sp"
                       android:maxLength="4"
                       android:gravity="center"
                        android:background="@android:drawable/editbox_background_normal"
                        android:layout_weight="0.8"
                      android:id="@+id/edittxt_mnth2"
                        />
                    
                    <EditText 
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                       android:inputType="number"
                       android:padding="4dp"
                       android:textSize="10sp"
                       android:maxLength="4"
                       android:gravity="center"
                        android:background="@android:drawable/editbox_background_normal"
                        android:layout_weight="0.8"
                        android:visibility="gone"
                      android:id="@+id/edittxt_mnth3"
                        />
                   
                    <EditText 
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                       android:inputType="number"
                       android:padding="4dp"
                       android:textSize="10sp"
                       android:maxLength="4"
                       android:gravity="center"
                        android:background="@android:drawable/editbox_background_normal"
                        android:layout_weight="0.8"
                        android:visibility="gone"
                      android:id="@+id/edittxt_mnth4"
                        />
                    
                    <EditText 
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                       android:inputType="number"
                       android:padding="4dp"
                       android:textSize="10sp"
                       android:maxLength="4"
                       android:gravity="center"
                       android:background="@android:drawable/editbox_background_normal"
                        android:layout_weight="0.8"
                        android:visibility="gone"
                      android:id="@+id/edittxt_mnth5"
                        />
                    
                    <TextView 
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                       android:inputType="number"
                      android:id="@+id/txt_forBtn_OldStck"
                       android:textSize="9sp"
                       android:text="0"
                       android:textColor="#0000ae"
                       
                       android:gravity="center"
                       android:textStyle="bold"
                       android:layout_marginTop="2dp"
                       android:layout_marginBottom="2dp"
                      android:drawableRight="@drawable/dropdown"
                      android:paddingRight="1dp"
                        android:layout_weight="1"
                     android:background="@drawable/custom_bg_for_dtbtr_stock_row"
                        />
                    
                    </LinearLayout>
                    
                    <EditText 
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                       android:inputType="number"
                       android:gravity="center"
                       android:padding="4dp"
                       android:textSize="10sp"
                       android:maxLength="5"
                   	 android:background="@android:drawable/editbox_background_normal"
                        android:layout_weight="0.60"
                      android:id="@+id/edittxt_freeStck"
                        />
                    
                    <EditText 
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                       android:inputType="number"
                       android:padding="2dp"
                       android:textSize="10sp"
                       android:maxLength="5"
                       android:gravity="center"
                        android:background="@android:drawable/editbox_background_normal"
                        android:layout_weight="0.60"
                      android:id="@+id/edittxt_sampleStck"
                        />
                    
                </TableRow>
</TableLayout>
