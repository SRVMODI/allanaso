<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rtv_hdr"
        android:layout_width="fill_parent"
        android:layout_height="48dp"
        android:layout_alignParentLeft="true"



        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/custom_header_color"
       >


        <TextView
            android:id="@+id/head"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_toRightOf="@+id/backbutton"
            android:gravity="center_horizontal|left"
            android:paddingLeft="10dp"
            android:shadowColor="#80FFFFFF"
            android:shadowDx="4"
            android:shadowDy="4"
            android:shadowRadius="7"
            android:text="Stock Alert"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:textStyle="bold"/>



    </RelativeLayout>

    <TextView
        android:id="@+id/txt_msg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
       />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:padding="8dp"
        android:textColor="#000000"
        android:id="@+id/order_detail"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Product Qty"
                android:visibility="gone"
                android:textColor="#000000" />

            <EditText
                android:id="@+id/editText_prdctQty"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/et_boundary"
                android:inputType="number" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Extra Qty"
                android:visibility="gone"
                android:textColor="#000000" />

            <EditText
                android:id="@+id/ed_extraQty"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/et_boundary"
                android:inputType="number" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:id="@+id/btn_cancel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/custom_button"
            android:text="Proceed"
            android:textColor="@color/white" />
        <Button
            android:id="@+id/btn_done"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="5dp"
            android:background="@drawable/custom_button"
            android:text="OK"
            android:textColor="@color/white" />
    </LinearLayout>
</LinearLayout>
