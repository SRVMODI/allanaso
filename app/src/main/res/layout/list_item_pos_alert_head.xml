<?xml version="1.0" encoding="utf-8"?>


 <LinearLayout 
      xmlns:android="http://schemas.android.com/apk/res/android"
       xmlns:tools="http://schemas.android.com/tools"
       
	      android:orientation="vertical"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		
		 >
		 
       <LinearLayout 
        android:id="@+id/VisitDetailLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="20dp"
    android:layout_gravity="center_horizontal"
    android:gravity="center_horizontal"
    
    >
    
         <TextView
                        android:id="@+id/LastVisitHeading"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="3dp"
                         android:textStyle="bold" 
                         android:textColor="#ffffff"
                        android:text="Last Visit Date : "  />
         
         <TextView
                        android:id="@+id/VisitDateId"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                         android:textStyle="bold" 
                         android:textColor="#ffffff"
                        android:text="(22-May-2016) "  />
    </LinearLayout>
     
		 
     
       <LinearLayout 
	      android:id="@+id/ll_sample"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:orientation="horizontal"
	    android:layout_marginTop="12dp"
	   
	   android:weightSum="10">
		
           
            <TextView 
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="4"
        android:text="POS Material"
         android:gravity="center"
         android:textSize="10sp"
        android:textStyle="bold"
        android:textColor="#D42625"/>
	
            
             <TextView 
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:text="Return to Distributor"
         android:gravity="center"
         android:textSize="10sp"
        android:textStyle="bold"
        android:textColor="#D42625"/>
       
                <TextView 
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:text="Fresh Order"
         android:gravity="center"
         android:textSize="10sp"
        android:textStyle="bold"
        android:textColor="#D42625"/>
                
                 <TextView 
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:text="Discard/Damage"
         android:gravity="center"
         android:textSize="10sp"
        android:textStyle="bold"
        android:textColor="#D42625"/>
      
       
		   
		   
		   	 </LinearLayout>
		 

	</LinearLayout>
	
 
