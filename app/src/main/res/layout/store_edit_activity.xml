<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_alignParentTop="true"
        android:background="@color/primary_color"

        android:elevation="6dp"
        android:minHeight="?attr/actionBarSize"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        app:titleTextAppearance="@style/Toolbar.TitleText" >
        <ImageView
            android:id="@+id/backIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:visibility="visible"
            android:paddingRight="10dp"
            android:src="@drawable/ic_back"


            android:textSize="15sp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="#fff"
            android:textSize="20sp"
            android:visibility="visible"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:text="@string/updateStoreDetail"/>

        <ImageView
            android:id="@+id/logoutIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:visibility="gone"
            android:paddingRight="10dp"
            android:src="@drawable/logout30"


            android:textSize="15sp" />

        <!-- app:titleTextAppearance using for custom title size -->

    </android.support.v7.widget.Toolbar>
<ScrollView
    android:layout_width="match_parent"
    android:layout_weight="10"
    android:background="@drawable/shadow_with_5dp"
    android:layout_height="0dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"


        android:layout_height="wrap_content">
        <TextView
            android:layout_width="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:textStyle="bold"
            android:id="@+id/textviewFirstname"
            android:textSize="15sp"
            android:textColor="#A6004E"
            android:layout_height="wrap_content"
            android:text="@string/ownername"/>
        <EditText
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:textSize="13sp"
            android:inputType="textCapWords"
            android:textColor="#000"
            android:id="@+id/ET_ownername"
            android:layout_marginRight="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ1234567890 -."
            android:background="@drawable/edittext_bg"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:textStyle="bold"
            android:id="@+id/textviewLastname"
            android:textSize="15sp"
            android:textColor="#A6004E"
            android:layout_height="wrap_content"
            android:text="@string/storeContactNo"/>
        <EditText
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:textSize="13sp"
            android:textColor="#000"
            android:id="@+id/ET_storecontactno"
            android:inputType="number"
            android:maxLength="10"
            android:layout_marginRight="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ1234567890 -."
            android:background="@drawable/edittext_bg"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:textStyle="bold"
            android:id="@+id/store_address"
            android:textSize="15sp"
            android:textColor="#A6004E"
            android:layout_height="wrap_content"
            android:text="@string/storeaddress"/>
        <EditText
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="10dp"
            android:digits="@string/remarks"
            android:id="@+id/ET_store_address"

            android:textColor="#000"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="13sp"
            android:background="@drawable/edittext_bg"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:textStyle="bold"
            android:id="@+id/salespersonname"
            android:textSize="15sp"
            android:textColor="#A6004E"
            android:layout_height="wrap_content"
            android:text="@string/salespersonname"/>
        <EditText
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="10dp"
            android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ1234567890 -."
            android:id="@+id/ET_salespersonname"
            android:inputType="textCapWords"
            android:textColor="#000"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="13sp"
            android:background="@drawable/edittext_bg"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:textStyle="bold"
            android:id="@+id/salespersoncontact"
            android:textSize="15sp"
            android:textColor="#A6004E"
            android:layout_height="wrap_content"
            android:text="@string/salespersoncontact"/>
        <EditText
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="10dp"
            android:inputType="number"
            android:id="@+id/ET_salespersoncontact"
            android:maxLength="10"
            android:textColor="#000"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="13sp"
            android:background="@drawable/edittext_bg"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
            <RadioButton
                android:layout_width="0dp"
                android:id="@+id/rb_addImage"
                android:layout_margin="5dp"
                android:text="@string/addimages"
                android:layout_weight="1"
                android:layout_height="wrap_content" />
            <RadioButton
                android:layout_width="0dp"
                android:id="@+id/rb_replaceImage"
                android:text="@string/replaceimages"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:layout_height="wrap_content" />

        </LinearLayout>
        <Button
            android:layout_width="wrap_content"
            android:background="#CD005B"
            android:layout_gravity="center"
            android:id="@+id/btn_clickImage"
            android:text="@string/ClickPhoto"
            android:padding="5dp"
            android:visibility="gone"
            android:drawablePadding="5dp"
            android:drawableRight="@drawable/camera_icon"
            android:gravity="center"
            android:textStyle="bold"
            android:textColor="#ffffff"
            android:layout_height="35dp" />
        <HorizontalScrollView
            android:layout_width="match_parent"
            android:background="@drawable/shadow_with_5dp"

            android:layout_height="150dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:gravity="center"
                android:id="@+id/ll_ParentOfImages"
                android:orientation="horizontal"
                android:padding="5dp"
                android:layout_height="match_parent">

            </LinearLayout>
        </HorizontalScrollView>

    </LinearLayout>
</ScrollView>
<Button
    android:layout_width="wrap_content"
    android:layout_margin="5dp"
    android:id="@+id/btnSubmit"
    android:paddingLeft="40dp"
    android:textStyle="bold"
    android:paddingRight="40dp"
    android:layout_gravity="center"
    android:gravity="center"
    android:textColor="#ffffff"
    android:background="@drawable/custom_button"
    android:text="@string/Submit"
    android:layout_height="wrap_content" />
</LinearLayout>